<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_possible_disease"
    tools:context="com.idoc.simon.idoc.PossibleDiseaseActivity"
    android:id="@+id/pbRelative_layout"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/pbLinearLayout"
        >




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="142dp"
            android:layout_height="match_parent"
            android:layout_weight="0.64"

            android:id="@+id/pbSubLinearlayout"
            >

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pbDiseaseListView" />
        </LinearLayout>
        <View
            android:layout_width="8dp"
            android:layout_height="fill_parent"
            android:background="#ffffffff"
            android:id="@+id/generalView"
            />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="79dp"
            android:layout_height="match_parent"

            android:layout_weight="0.35"
            android:weightSum="1"
            android:id="@+id/pbSubLinearlayout2"
            >

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pbDiseasePercentListView" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
